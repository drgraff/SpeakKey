<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a mode for the new prompt:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radio_group_prompt_mode_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_mode_one_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="One Step Transcription"/>

        <RadioButton
            android:id="@+id/radio_mode_two_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Two Step Transcription (Processing)"/>

        <RadioButton
            android:id="@+id/radio_mode_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Photo Vision Prompt"/>
    </RadioGroup>

</LinearLayout>
